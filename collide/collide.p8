__lua__
#include collide.lua

function _init()
	player={
		x=10, y=10,
		side=8
	}
	
	block={
		x=50, y=50,
		side=20
	}
end

function _update()
	if btn(0) then
		player.x-=1
	end
	
	if btn(1) then
		player.x+=1
	end
	
	if btn(2) then
		player.y-=1
	end	
	
	if btn(3) then
		player.y+=1
	end
	
	touching = collide(player.x, player.y, player.side, player.side, block.x, block.y, block.side, block.side)
end

function _draw()
	cls()
	rectfill(player.x, player.y, player.x+player.side, player.y+player.side, 7)
	rectfill(block.x, block.y, block.x+block.side, block.y+block.side, 9)
	if touching then
		print("touching!", 7)
 end
end

